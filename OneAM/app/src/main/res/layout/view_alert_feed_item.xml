<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_cv_feed_item"
    style="@style/DefaultCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/default_margin_padding_normal"
    android:layout_marginLeft="@dimen/default_margin_padding_extra_large"
    android:layout_marginRight="@dimen/default_margin_padding_extra_large"
    android:layout_marginTop="@dimen/default_margin_padding_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alert_tv_feed_title"
            style="@style/HeaderTextView.Black.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_padding_large"
            android:text="@string/sample" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alert_tv_feed_timestamp"
                style="@style/BodyTextView.Black.ExtraSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/default_margin_padding_large"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:gravity="bottom"
                android:text="@string/sample" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/alert_layout_feed_read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/default_margin_padding_large"
                android:paddingLeft="@dimen/default_margin_padding_normal"
                android:paddingRight="@dimen/default_margin_padding_large"
                android:paddingTop="@dimen/default_margin_padding_normal">

                <TextView
                    style="@style/BodyTextView.Red.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_margin_padding_normal"
                    android:layout_marginRight="@dimen/default_margin_padding_normal"
                    android:text="@string/alert_feed_read_more" />

                <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ic_view_pager_next" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>