<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/DefaultCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_padding_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/default_margin_padding_large">

            <TextView
                style="@style/HeaderTextView.Blue.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_normal"
                android:layout_marginRight="@dimen/default_margin_padding_normal"
                android:layout_marginTop="@dimen/default_margin_padding_normal"
                android:text="@string/switch_summary_switch_out" />

            <View
                style="@style/HorizontalDivider"
                android:layout_marginBottom="@dimen/default_margin_padding_large"
                android:layout_marginLeft="@dimen/default_margin_padding_normal"
                android:layout_marginRight="@dimen/default_margin_padding_normal"
                android:layout_marginTop="@dimen/default_margin_padding_large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/default_margin_padding_large"
                android:paddingRight="@dimen/default_margin_padding_large">

                <TextView
                    android:id="@+id/switch_summary_tv_switch_out_symbol"
                    style="@style/HeaderTextView.Black.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample" />

                <View style="@style/EmptyView" />

                <TextView
                    style="@style/BodyTextView.Black.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_margin_padding_large"
                    android:layout_marginRight="@dimen/default_margin_padding_large"
                    android:text="@string/switch_summary_switch_outvolume" />

                <TextView
                    android:id="@+id/switch_summary_tv_switch_out_volume"
                    style="@style/BodyTextView.Green.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample" />

            </LinearLayout>

            <TextView
                android:id="@+id/switch_summary_tv_switch_out_name"
                style="@style/BodyTextView.Black.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_padding_normal"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:text="@string/sample" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/DefaultCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin_padding_large"
        android:layout_marginLeft="@dimen/default_margin_padding_large"
        android:layout_marginRight="@dimen/default_margin_padding_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/default_margin_padding_large">

            <TextView
                style="@style/HeaderTextView.Blue.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_normal"
                android:layout_marginRight="@dimen/default_margin_padding_normal"
                android:layout_marginTop="@dimen/default_margin_padding_normal"
                android:text="@string/switch_summary_switch_in" />

            <View
                style="@style/HorizontalDivider"
                android:layout_marginBottom="@dimen/default_margin_padding_large"
                android:layout_marginLeft="@dimen/default_margin_padding_normal"
                android:layout_marginRight="@dimen/default_margin_padding_normal"
                android:layout_marginTop="@dimen/default_margin_padding_large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/default_margin_padding_large"
                android:paddingRight="@dimen/default_margin_padding_large">

                <TextView
                    android:id="@+id/switch_summary_tv_switch_in_symbol"
                    style="@style/HeaderTextView.Black.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample" />

                <View style="@style/EmptyView" />

                <TextView
                    style="@style/BodyTextView.Black.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_margin_padding_large"
                    android:layout_marginRight="@dimen/default_margin_padding_large"
                    android:text="@string/switch_summary_switch_in_volume" />

                <TextView
                    android:id="@+id/switch_summary_tv_switch_in_volume"
                    style="@style/BodyTextView.Green.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample" />

            </LinearLayout>

            <TextView
                android:id="@+id/switch_summary_tv_switch_in_name"
                style="@style/BodyTextView.Black.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_padding_normal"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:text="@string/sample" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/switch_summary_btn_switch"
        style="@style/BlueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin_padding_large"
        android:layout_marginLeft="@dimen/default_margin_padding_extra_large"
        android:layout_marginRight="@dimen/default_margin_padding_extra_large"
        android:text="@string/switch_summary_switch" />

</LinearLayout>