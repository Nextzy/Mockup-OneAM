<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/default_margin_padding_normal"
        android:paddingRight="@dimen/default_margin_padding_normal"
        android:paddingTop="@dimen/default_margin_padding_normal">

        <TextView
            style="@style/HeaderTextView.Blue.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_padding_normal"
            android:layout_marginRight="@dimen/default_margin_padding_normal"
            android:text="@string/switch_in_fund_detail_switch_out" />

        <View
            style="@style/HorizontalDivider"
            android:layout_marginBottom="@dimen/default_margin_padding_normal"
            android:layout_marginLeft="@dimen/default_margin_padding_normal"
            android:layout_marginRight="@dimen/default_margin_padding_normal"
            android:layout_marginTop="@dimen/default_margin_padding_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/default_margin_padding_large"
            android:paddingRight="@dimen/default_margin_padding_large">

            <TextView
                android:id="@+id/switch_in_fund_detail_tv_switch_out_symbol"
                style="@style/HeaderTextView.Black.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample" />

            <View style="@style/EmptyView" />

            <TextView
                style="@style/BodyTextView.Black.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:text="@string/switch_in_fund_detail_volume" />

            <TextView
                android:id="@+id/switch_in_fund_detail_tv_switch_out_volume"
                style="@style/BodyTextView.Green.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample" />

        </LinearLayout>

        <TextView
            android:id="@+id/switch_in_fund_detail_tv_switch_out_name"
            style="@style/BodyTextView.Black.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_padding_large"
            android:layout_marginRight="@dimen/default_margin_padding_large"
            android:text="@string/sample" />

        <Button
            android:id="@+id/switch_in_fund_detail_btn_change_switch_out"
            style="@style/BlueGrayButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_padding_large"
            android:layout_marginLeft="@dimen/default_margin_padding_normal"
            android:layout_marginRight="@dimen/default_margin_padding_normal"
            android:layout_marginTop="@dimen/default_margin_padding_normal"
            android:text="@string/switch_in_fund_detail_change_switch_out" />
    </LinearLayout>
</android.support.v7.widget.CardView>