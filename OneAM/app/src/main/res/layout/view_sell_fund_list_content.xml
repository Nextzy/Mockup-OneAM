<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <LinearLayout
        android:id="@+id/sell_fund_list_layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/HeaderTextView.Blue.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_padding_extra_large"
            android:layout_marginRight="@dimen/default_margin_padding_extra_large"
            android:layout_marginTop="@dimen/default_margin_padding_large"
            android:text="@string/sell_fund_list_select_fund_to_sell" />

        <View
            style="@style/HorizontalDivider"
            android:layout_margin="@dimen/default_margin_padding_large" />

        <Button
            style="@style/BlueButton"
            android:id="@+id/sell_fund_list_btn_more_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_padding_large"
            android:layout_marginLeft="@dimen/default_margin_padding_extra_large"
            android:layout_marginRight="@dimen/default_margin_padding_extra_large"
            android:text="@string/sell_fund_list_more_filter" />

        <LinearLayout
            android:id="@+id/sell_fund_list_layout_fund_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_margin_padding_large"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>