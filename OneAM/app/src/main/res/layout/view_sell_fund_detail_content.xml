<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/default_margin_padding_large">

        <TextView
            style="@style/HeaderTextView.Blue.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_padding_extra_large"
            android:layout_marginStart="@dimen/default_margin_padding_extra_large"
            android:layout_marginTop="@dimen/default_margin_padding_large"
            android:text="@string/sell_fund_detail_fund_detail" />

        <View
            style="@style/HorizontalDivider"
            android:layout_margin="@dimen/default_margin_padding_large" />

        <android.support.v7.widget.CardView
            style="@style/DefaultCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_padding_normal"
            android:layout_marginLeft="@dimen/default_margin_padding_extra_large"
            android:layout_marginRight="@dimen/default_margin_padding_extra_large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sell_fund_detail_tv_symbol"
                    style="@style/HeaderTextView.Black.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin_padding_large"
                    android:layout_marginRight="@dimen/default_margin_padding_large"
                    android:layout_marginTop="@dimen/default_margin_padding_large"
                    android:text="@string/sample" />

                <TextView
                    android:id="@+id/sell_fund_detail_tv_name"
                    style="@style/BodyTextView.Black.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin_padding_large"
                    android:layout_marginRight="@dimen/default_margin_padding_large"
                    android:layout_marginTop="@dimen/default_margin_padding_small"
                    android:text="@string/sample" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin_padding_large"
                    android:layout_marginRight="@dimen/default_margin_padding_large"
                    android:layout_marginTop="@dimen/default_margin_padding_large"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyTextView.Blue.Normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sell_fund_detail_risk_ratio" />

                    <View style="@style/EmptyView" />

                    <TextView
                        android:id="@+id/sell_fund_detail_tv_risk_rating"
                        style="@style/BodyTextView.Black.Normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin_padding_large"
                    android:layout_marginRight="@dimen/default_margin_padding_large"
                    android:layout_marginTop="@dimen/default_margin_padding_small"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyTextView.Blue.Normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sell_fund_detail_star_rate" />

                    <View style="@style/EmptyView" />

                    <TextView
                        android:id="@+id/sell_fund_detail_tv_star_rating"
                        style="@style/BodyTextView.Black.Normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin_padding_large"
                    android:layout_marginRight="@dimen/default_margin_padding_large"
                    android:layout_marginTop="@dimen/default_margin_padding_small"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyTextView.Blue.Normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sell_fund_detail_nav" />

                    <View style="@style/EmptyView" />

                    <TextView
                        android:id="@+id/sell_fund_detail_nav"
                        style="@style/BodyTextView.Black.Normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin_padding_large"
                    android:layout_marginRight="@dimen/default_margin_padding_large"
                    android:layout_marginTop="@dimen/default_margin_padding_small"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyTextView.Blue.Normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sell_fund_detail_cut_off_time" />

                    <View style="@style/EmptyView" />

                    <TextView
                        android:id="@+id/sell_fund_detail_tv_cut_off_time"
                        style="@style/BodyTextView.Black.Normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample" />

                </LinearLayout>

                <Button
                    android:id="@+id/sell_fund_detail_btn_download_fact_sheet"
                    style="@style/BlueGrayButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin_padding_large"
                    android:layout_marginLeft="@dimen/default_margin_padding_large"
                    android:layout_marginRight="@dimen/default_margin_padding_large"
                    android:layout_marginTop="@dimen/default_margin_padding_large"
                    android:text="@string/sell_fund_detail_download_fact_sheet" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/DefaultCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_padding_normal"
            android:layout_marginLeft="@dimen/default_margin_padding_extra_large"
            android:layout_marginRight="@dimen/default_margin_padding_extra_large"
            android:layout_marginTop="@dimen/default_margin_padding_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin_padding_large"
                    android:layout_marginRight="@dimen/default_margin_padding_large"
                    android:layout_marginTop="@dimen/default_margin_padding_large"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyTextView.Blue.Normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sell_fund_detail_in_port_amount" />

                    <View style="@style/EmptyView" />

                    <TextView
                        android:id="@+id/sell_fund_detail_tv_in_port_amount"
                        style="@style/BodyTextView.Black.Normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin_padding_large"
                    android:layout_marginRight="@dimen/default_margin_padding_large"
                    android:layout_marginTop="@dimen/default_margin_padding_normal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyTextView.Blue.Large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sell_fund_detail_volume" />

                    <View style="@style/EmptyView" />

                    <EditText
                        android:id="@+id/sell_fund_detail_et_volume"
                        style="@style/DefaultEditText"
                        android:layout_width="@dimen/sell_fund_detail_edit_text_volume_width"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_green" />

                </LinearLayout>

                <Button
                    android:id="@+id/sell_fund_detail_btn_sell"
                    style="@style/BlueButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin_padding_large"
                    android:layout_marginLeft="@dimen/default_margin_padding_large"
                    android:layout_marginRight="@dimen/default_margin_padding_large"
                    android:layout_marginTop="@dimen/default_margin_padding_large"
                    android:text="@string/sell_fund_detail_sell" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>