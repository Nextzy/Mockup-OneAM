<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/default_margin_padding_large"
    android:paddingRight="@dimen/default_margin_padding_large"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/DefaultCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/default_margin_padding_large"
        android:layout_marginLeft="@dimen/default_margin_padding_large"
        android:layout_marginTop="@dimen/default_margin_padding_normal"
        android:layout_marginBottom="@dimen/default_margin_padding_normal">

        <View
            android:id="@+id/purchased_fund_view_indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_fund_indicator"
            android:background="@color/bg_red" />

        <LinearLayout
            android:id="@+id/purchased_fund_layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/default_margin_padding_large"
            android:paddingRight="@dimen/default_margin_padding_large">

            <TextView
                android:id="@+id/purchased_fund_tv_symbol"
                style="@style/HeaderTextView.Black.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:layout_marginTop="@dimen/default_margin_padding_large"
                android:text="@string/sample" />

            <TextView
                android:id="@+id/purchased_fund_tv_name"
                style="@style/BodyTextView.Black.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:layout_marginTop="@dimen/default_margin_padding_small"
                android:text="@string/sample" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:layout_marginTop="@dimen/default_margin_padding_large"
                android:orientation="horizontal">

                <TextView
                    style="@style/BodyTextView.Blue.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/purchased_fund_risk_rating" />

                <View style="@style/EmptyView" />

                <TextView
                    android:id="@+id/purchased_fund_tv_risk_rating"
                    style="@style/BodyTextView.Black.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:layout_marginTop="@dimen/default_margin_padding_small"
                android:orientation="horizontal">

                <TextView
                    style="@style/BodyTextView.Blue.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/purchased_fund_star_rate" />

                <View style="@style/EmptyView" />

                <TextView
                    android:id="@+id/purchased_fund_tv_star_rating"
                    style="@style/BodyTextView.Black.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:layout_marginTop="@dimen/default_margin_padding_small"
                android:orientation="horizontal">

                <TextView
                    style="@style/BodyTextView.Blue.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/purchased_fund_nav" />

                <View style="@style/EmptyView" />

                <TextView
                    android:id="@+id/purchased_fund_nav"
                    style="@style/BodyTextView.Black.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:layout_marginTop="@dimen/default_margin_padding_small"
                android:orientation="horizontal">

                <TextView
                    style="@style/BodyTextView.Blue.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/purchased_fund_cut_off_time" />

                <View style="@style/EmptyView" />

                <TextView
                    android:id="@+id/purchased_fund_tv_cut_off_time"
                    style="@style/BodyTextView.Black.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_padding_large"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:layout_marginTop="@dimen/default_margin_padding_small"
                android:orientation="horizontal">

                <TextView
                    style="@style/BodyTextView.Blue.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/purchased_fund_in_port_amount" />

                <View style="@style/EmptyView" />

                <TextView
                    android:id="@+id/purchased_fund_tv_in_port_amount"
                    style="@style/BodyTextView.Green.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>